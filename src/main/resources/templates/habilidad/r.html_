<div class="container">
	<div class="row m-3">
		<h2 class="display-4">Habilidades</h2>
	</div>
</div>

<div class="container rounded p-4">
	
	<div class="row m-3">
		<h3 class="display-5">Lista de habilidades</h3>
	</div>
	
	<table class="table table-hover">
	<thead>
	  
		    <tr class="table-active">
				<th scope="col">
					Habilidad
				</th>
				<th scope="col">
					DescripciÃ³n
				</th>
				<th scope="col">
					Acciones
				</th>
		    </tr>
	  </thead>
	  <tbody>
	  
		    <tr>
		    	<!-- scope="row" en un th indica el indice de la fila -->
				<tr th:each="habilidad:${habilidades}">
					<td th:text="${habilidad.nombre}"/>
					<td th:text="${habilidad.descripcion}"/>
					<td class="row">
						<form action="/habilidad/u">
							<input type="hidden" name="idHabilidad" th:value="${habilidad.id}"/>
							<input type="submit" value="Modificar"/>
						</form>
						<form action="/habilidad/d" method="POST">
							<input type="hidden" name="idHabilidad" th:value="${habilidad.id}"/>
							<input type="submit" value="Eliminar"/>
						</form>
					</td>
				</tr>
		    </tr>
	    
		</tbody>
	</table>
	<br/>
	<form action="/habilidad/c">
		<input type="submit" class="btn btn-success btn-sm" value="Nueva habilidad"/>
	</form>
</div>